                image: 'https://images.unsplash.com/photo-1627123424574-724758594e93?w=500&q=80' // รูปกระเป๋าตัง
            },
            {
                id: 4,
                type: 'found',
                name: 'หูฟัง AirPods (ข้างขวา)',
                location: 'ทางเดินเชื่อมตึก 3',
                desc: 'ตกอยู่ตรงบันได เก็บได้ช่วงบ่ายครับ',
                date: 'เมื่อวานนี้',
                image: 'https://images.unsplash.com/photo-1606841837239-c5a1a4a076ae?w=500&q=80' // รูปหูฟัง
            }
        ];

        const container = document.getElementById('itemContainer');
        const modal = document.getElementById('reportModal');
        const form = document.getElementById('reportForm');

        // Function to render items (แก้ไขส่วนแสดงผลรูปภาพ)
        function renderItems(filter = 'all') {
            container.innerHTML = '';
            
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('active');
                if(btn.innerText === (filter === 'all' ? 'ทั้งหมด' : (filter === 'lost' ? 'ของหาย' : 'เก็บได้'))) {
                    btn.classList.add('active');
                }
            });

            const filteredItems = filter === 'all' ? items : items.filter(item => item.type === filter);

            filteredItems.forEach(item => {
                const card = document.createElement('div');
                card.className = 'card';
                // ใช้รูปภาพจาก URL ที่เตรียมไว้, หากโหลดไม่ได้ให้ใช้รูปกล่องแทน
                const fallbackImage = 'https://images.unsplash.com/photo-1586769852044-692d6e3703f0?w=500&q=80'; 

                card.innerHTML = `
                    <div class="status-badge ${item.type === 'lost' ? 'status-lost' : 'status-found'}">
                        ${item.type === 'lost' ? '
